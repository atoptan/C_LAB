#include<stdio.h>
void main()
{
	char sekil;
	int sayi;
	printf("Sekli giriniz:");
	scanf("%c",&sekil);
	printf("Sayiyi giriniz:");
	scanf("%d",&sayi);
	for (int i = 0; i < sayi; i++)
	{
		for (int j = i; j < sayi; j++)
		{
			printf("%c",sekil);
		}
		printf("\n");
		for (int k = i; k >=0; k--)
		{
			printf(" ");
		}
	}
}
